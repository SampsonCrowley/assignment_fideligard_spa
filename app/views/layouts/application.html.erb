<!DOCTYPE html>
<html lang="en" ng-app="fideligard">
  <head>
    <title>Fideligard</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body novalidate>
    <%= yield %>
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" ui-sref="parent">Parent</a>
        </div>

        <ul class="nav navbar-nav navbar-right">
          <li><a ui-sref="portfolio">Portfolio</a></li>
          <li><a ui-sref="transactions">Transactions</a></li>
          <li><a ui-sref="trade">Trade</a></li>
        </ul>
      </div><!-- /.container-fluid -->
    </nav>
    <div class="container-fluid">
      <div class="row">
        <div class="col-xs-5">
          <section class="bordered" ui-view="stockData"></section>
        </div>
        <div class="col-xs-7">
          <div class="row">
            <div class="col-xs-12">
              <section class="bordered" ui-view="dateWidget"></section>
            </div>
          </div>
          <div class="row">
            <div class="col-xs-12">
              <section class="bordered" ui-view="userData"></section>
            </div>
          </div>
        </div>
      </div>
    </div>

  </body>
</html>
